<div class="container">
    {{> form-header}}
    {{#if errorMsg}}
        <div class="alert alert-danger" role="alert">{{errorMsg}}</div>
    {{/if}}
    <form name="login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" id="email" type="email" name="email" required="true">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" id="password" type="password" name="password" required="true">
        </div>
        <div class="actions">
            <button class="btn btn-large btn-primary" type="submit">Login</button>
        </div>
    </form>
    <h5>Don't have an account? <a href="/register">Register here</a></h5>
</div>
