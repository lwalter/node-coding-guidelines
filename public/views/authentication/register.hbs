<div class="container">
    {{> form-header}}
    {{#if errorMsg}}
        <div class="alert alert-danger" role="alert">{{errorMsg}}</div>
    {{/if}}
    <form name="register" method="post">
        <div class="form-group">
            <label>First name</label>
            <input class="form-control" id="firstname" type="text" name="firstname" required="true">
        </div>
        <div class="form-group">
            <label>Last name</label>
            <input class="form-control" id="lastname" type="text" name="lastname" required="true">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" id="email" type="email" name="email" required="true">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" id="password" type="password" name="password" required="true">
        </div>
        <div class="actions">
            <button class="btn btn-large btn-primary" type="submit">Register</button>
        </div>
    </form>
    <h5>Already have an account? <a href="/login">Login here</a></h5>
</div>
